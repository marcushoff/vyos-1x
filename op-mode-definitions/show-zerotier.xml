<?xml version="1.0"?>
<interfaceDefinition>
  <node name="show">
    <children>
      <node name="zerotier">
        <properties>
          <help>Show ZeroTier information</help>
        </properties>
        <children>
          <node name="status">
            <properties>
              <help>Show status info</help>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --info</command>
            <children>
              <leafNode name="detail">
                <properties>
                  <help>Show detailed status info</help>
                </properties>
                <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --status</command>
              </leafNode>
            </children>
          </node>
          <node name="network">
            <properties>
              <help>Show networks</help>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --network</command>
          </node>
          <tagNode name="network">
            <properties>
              <help>Show specific network</help>
              <completionHelp>
                <path>vpn zerotier network</path>
              </completionHelp>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --network $4</command>
            <children>
              <leafNode name="routes">
                <properties>
                  <help>Show controller managed routes</help>
                </properties>
                <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --routes $4</command>
              </leafNode>
            </children>
          </tagNode>
          <node name="peer">
            <properties>
              <help>Show peers</help>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --peer</command>
          </node>
          <tagNode name="peer">
            <properties>
              <help>Show specific peer</help>
              <completionHelp>
                <list>&lt;hhhhhhhhhh&gt;</list>
              </completionHelp>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --peer $4</command>
            <children>
              <leafNode name="paths">
                <properties>
                  <help>Show paths</help>
                </properties>
                <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --paths $4</command>
              </leafNode>
            </children>
          </tagNode>
          <node name="moon">
            <properties>
              <help>Show moons</help>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --moon</command>
          </node>
          <tagNode name="moon">
            <properties>
              <help>Show specific moon</help>
              <completionHelp>
                <!--TODO: create configuration mode for moons -->
                <path>vpn zerotier moon</path>
              </completionHelp>
            </properties>
            <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --moon $4</command>
            <children>
              <leafNode name="roots">
                <properties>
                  <help>Show root definitions</help>
                </properties>
                <command>sudo ${vyos_op_scripts_dir}/show_zerotier.py --roots $4</command>
              </leafNode>
            </children>
          </tagNode>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
