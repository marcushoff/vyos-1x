<?xml version="1.0"?>
<interfaceDefinition>
  <node name="interfaces">
    <children>
      <tagNode name="zerotier" owner="${vyos_conf_scripts_dir}/interfaces-zerotier.py">
        <properties>
          <help>ZeroTier Interface</help>
          <priority>480</priority>
          <constraint>
            <regex>^zt[0-9]+$</regex>
          </constraint>
          <constraintErrorMessage>ZeroTier interface must be named ztN</constraintErrorMessage>
          <valueHelp>
            <format>ztN</format>
            <description>ZeroTier interface name</description>
          </valueHelp>
        </properties>
        <children>
          <node name="network">
            <properties>
              <help>ZeroTier network</help>
            </properties>
            <children>
              <leafNode name="id">
                <properties>
                  <help>Network ID</help>
                  <constraint>
                    <regex>^[a-f0-9]{16}$</regex>
                  </constraint>
                  <constraintErrorMessage>Must be a 16 digit hex number</constraintErrorMessage>
                  <valueHelp>
                    <format>hhhhhhhhhhhhhhhh</format>
                    <description>ZeroTier network ID</description>
                  </valueHelp>
                </properties>
              </leafNode>
              <leafNode name="unmanaged">
                <properties>
                  <help>Disable controller managed IP and route assignment</help>
                  <valueless/>
                </properties>
              </leafNode>
              <leafNode name="global">
                <properties>
                  <help>Controller managed IP and routes can overlap public IP space</help>
                  <valueless/>
                </properties>
              </leafNode>
              <leafNode name="default">
                <properties>
                  <help>Network can override system default route (full tunnel)</help>
                  <valueless/>
                </properties>
              </leafNode>
            </children>
          </node>
          #include <include/address-ipv4-ipv6.xml.i>
          #include <include/interface-description.xml.i>
          #include <include/interface-disable.xml.i>
          #include <include/interface-vrf.xml.i>
          #include <include/interface-mtu-68-9000.xml.i>
        </children>
      </tagNode>
    </children>
  </node>
</interfaceDefinition>
